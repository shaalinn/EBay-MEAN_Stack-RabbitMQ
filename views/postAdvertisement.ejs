<!DOCTYPE html>
<html lang="en">
<head>

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/dropdowncss.css">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css">
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>

    <link rel='stylesheet' href='/stylesheets/style.css' />
    <meta charset="UTF-8">
    <title>Post Advertisement</title>
</head>
<body  ng-app="postAD" ng-controller="postAD" style="background-color: #f7f7f7">
<div class="container">
    <div class="page-header">
        <table>
            <tbody>
            <tr>
                <td width="100%">
                    Hi!<div class="dropdown"><a class="dropbtn" href="productPage.html" >{{username}} <i class="fa fa-caret-down" aria-hidden="true"></i></a>
                        <div class="dropdown-content">
                            <a href="/profile">Profile</a>
                            <a href="/signout">Sign Out!</a>
                        </div>
                    </div> | <a href="/postAdvertisement">Sell</a>
                </td>
                <td >
                    <a href="/shoppingCart" ><i class="fa fa-shopping-cart" style="font-size: 18px;color:grey;"></i></a>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
    <div class="row">
        <table>
            <tbody>
            <tr>
                <td>
                    <a href="/">
                    <img src="https://cdn4.iconfinder.com/data/icons/flat-brand-logo-2/512/ebay-128.png">
                    </a>
                </td>
                <td width="100%">
                    <input class="form-control" type="text"  placeholder="Search..." ng-model="searchQ">
                </td>
                <td>
                    <button class="btn btn-primary" ng-click="search()">Search</button>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="container">
    <h2>Post Advertisement</h2>
    <div class="row">
        <div class="col-md-2">
        </div>
        <div class="col-md-8">
            <form name="postFrom">
                <div class="form-group">
                    <label for="usr">Product Name:</label>
                    <input type="text" name="pname" class="form-control" id="usr" ng-model="pName" required>
                </div>
                <div class="form-group" ng-show="postFrom.pname.$touched && postFrom.pname.$invalid">
                    <span style="color:red;">Product Name Required</span>
                </div>
                <div class="form-group">
                    <label for="usr">Product Description:</label>
                    <input type="text" name="pdesc" class="form-control" id="usr" ng-model="pDescription" required>
                </div>
                <div class="form-group" ng-show="postFrom.pdesc.$touched && postFrom.pdesc.$invalid">
                    <span style="color:red;">Product Description Required</span>
                </div>
                <div class="form-group">
                    <label for="usr">Price or Base Price:</label>
                    <input type="number" name="pr" class="form-control" id="usr" ng-model="price" required>
                </div>
                <div class="form-group" ng-show="postFrom.pr.$touched && postFrom.pr.$invalid">
                    <span style="color:red;">Product Price Required</span>
                </div>
                <div class="radio">
                    <label><input type="radio" name="optradio" onclick="myfn1()" checked>Sell</label>
                    <label><input type="radio" name="optradio" onclick="myfn2()">Auction</label>
                </div>
                <div class="form-group" id="q" style="display: inline;">
                    <label for="usr">Quantity:</label>
                    <input type="number" class="form-control" id="usr" ng-model="quant" min="1">
                </div>
                <div class="form-group">
                    <label for="usr">Delivered From:</label>
                    <input type="text" name="dfrom" class="form-control" id="usr" ng-model="from" required>
                </div>
                <div class="form-group" ng-show="postFrom.dfrom.$touched && postFrom.dfrom.$invalid">
                    <span style="color:red;">Delivered From Required</span>
                </div>
            </form>
            <div>
                <button class="btn btn-success" ng-click="sell()" id="s" style="display: inline" ng-show="!postFrom.pname.$invalid && !postFrom.pdesc.$invalid && !postFrom.pr.$invalid && !postFrom.dfrom.$invalid">Sell</button>
                <button class="btn btn-success" ng-click="auction()" id="a" style="display: none" ng-show="!postFrom.pname.$invalid && !postFrom.pdesc.$invalid && !postFrom.pr.$invalid && !postFrom.dfrom.$invalid">Auction</button>
            </div>
        </div>
        <div class="col-md-2">
        </div>
    </div>
</div>

<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            Searched
        </div>
    </div>
</div>
<div class="container">
    <div id="products" class="row list-group">

        <div class="item  col-xs-4 col-lg-4" ng-repeat="x in products">
            <div class="thumbnail">
                <img class="group list-group-image" src="http://placehold.it/400x250/000/fff" alt="" />
                <div class="caption">
                    <a href="/product/{{x.p_id}}">
                        <h4 class="group inner list-group-item-heading">
                            {{ x.p_name }}</h4>
                    </a>
                    <p class="group inner list-group-item-text">
                        For {{ x.ausel }}</p>
                    <div class="row">
                        <div class="col-xs-12 col-md-6">
                            <p class="lead">
                                ${{ x.price }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
<script src="javascripts/postAdvertisement.js" type="text/javascript"></script>
<script>
    function myfn1() {
        var q = document.getElementById("q");
        var a = document.getElementById("a");
        var s = document.getElementById("s");
        s.style.display = "inline";
        a.style.display = "none";
        q.style.display = "inline";
    }
    function myfn2() {
        var q = document.getElementById("q");
        var a = document.getElementById("a");
        var s = document.getElementById("s");
        s.style.display = "none";
        a.style.display = "inline";
        q.style.display = "none";
    }

</script>
</html>