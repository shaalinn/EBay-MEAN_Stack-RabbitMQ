<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/stylesheets/dropdowncss.css">
    <link rel="stylesheet" type="text/css" href="/stylesheets/productSectionStyle.css">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.min.css">
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <meta charset="UTF-8">
    <title>Profile Page</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body ng-app="profile" ng-controller="profile" style="background-color: #f7f7f7">
<div class="container" >
    <div class="page-header">
        <table>
            <tbody>
            <tr>
                <td width="100%">
                    Hi!<div class="dropdown"><a class="dropbtn" href="productPage.html" > {{username}} <i class="fa fa-caret-down" aria-hidden="true"></i></a>
                        <div class="dropdown-content">
                            <a href="/profile">Profile</a>
                            <a href="/signout">Sign Out!</a>
                        </div>
                    </div> | <a href="/postAdvertisement">Sell</a>
                </td>
                <td >
                    <a href="/shoppingCart" ><i class="fa fa-shopping-cart" style="font-size: 18px;color:grey;"></i></a>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
    <div class="row">
        <table>
            <tbody>
            <tr>
                <td>
                    <a href="/">
                    <img src="https://cdn4.iconfinder.com/data/icons/flat-brand-logo-2/512/ebay-128.png">
                    </a>
                </td>
                <td width="100%">
                    <input class="form-control" type="text"  placeholder="Search..." ng-model="searchQ">
                </td>
                <td>
                    <button class="btn btn-primary" ng-click="search()">Search</button>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-12" style="height:100px;background-image:url('http://p.ebaystatic.com/aw/social/profile_coverimg_wood.jpg')"></div>
    </div>
    <div class="row">
        <div class="col-md-2" style="height:98px;background-image:url('http://p.ebaystatic.com/aw/social/profile_coverimg_wood.jpg')">

        </div>
        <div class="col-md-8" style="height: 98px">
            <div class="col-md-2"><img src="http://p.ebaystatic.com/aw/social/avatar.png" class="img-thumbnail" style="height: 98px;"></div>
            <div class="col-md-8">
                <div class="row" style="height: 35px;">
                    <b>{{ username }}</b>
                </div>
                <div class="row" >
                    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#myModal">Edit Profile</button>
                    <div class="modal fade" id="myModal" role="dialog">
                        <div class="modal-dialog">

                            <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Update Profile</h4>
                                </div>
                                <div class="modal-body" ng-controller="update">
                                    <form ng-submit="updateProfile()">
                                        <div class="form-group">
                                            First Name: <input type="text" class="form-control" id="usr" ng-model="fnn" required>
                                            Last Name: <input type="text" class="form-control" id="usr" ng-model="lnn" required>
                                            Phone Number: <input type="number" class="form-control" id="usr" ng-model="phnon" required>
                                            Birth Date: <input type="date" class="form-control" id="usr" ng-model="bdaten" required>
                                            Address Street: <input type="text" class="form-control" id="usr" ng-model="addrn" required>
                                            City: <input type="text" class="form-control" id="usr" ng-model="cityn" required>
                                            State: <input type="text" class="form-control" id="usr" ng-model="staten" required>
                                            <input type="submit" class="btn btn-success" value="Update Profle">
                                        </div>
                                    </form>
                                </div>
                                <div class="modal-footer">

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="row">

                </div>
            </div>
            <div class="col-md-2">
                <div class="row" >

                </div>
                <div class="row" style="height: 55px;">

                </div>
                <div class="row">

                </div>
            </div>

        </div>
        <div class="col-md-2" style="height:98px;background-image:url('http://p.ebaystatic.com/aw/social/profile_coverimg_wood.jpg')">
        </div>
    </div>
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-3">Last Log in : {{ last_login }} </div>
        <div class="col-md-5"></div>
    </div>
    <div class="row">
        <div class="page-header">
            <h2>About</h2>
            <table>
                <tbody>
                    <tr>
                        <td>
                            Name:
                        </td>
                        <td>
                            {{ name }}
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Phone Number:
                        </td>
                        <td>
                            {{ phno }}
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Email ID:
                        </td>
                        <td>
                            {{ email }}
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Birthdate:
                        </td>
                        <td>
                            {{ bdate }}
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Address:
                        </td>
                        <td>
                            {{ address }}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="page-header">
            <h2>Items For Sale</h2>
            <div class="well well-sm">
                <strong>Display</strong>
                <div class="btn-group">
                    <a href="#" id="list" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-th-list">
            </span>List</a> <a href="#" id="grid" class="btn btn-default btn-sm"><span
                                class="glyphicon glyphicon-th"></span>Grid</a>
                </div>
            </div>
            <div id="products" class="row list-group">

                <div class="item  col-xs-4 col-lg-4" ng-repeat="x in products">
                    <div class="thumbnail">
                        <img class="group list-group-image" src="https://onepagelove.com/wp-content/uploads/2014/12/ph-400x211.jpg" alt="" />
                        <div class="caption">

                                <h4 class="group inner list-group-item-heading">
                                    {{ x.p_name }}</h4>

                            <p class="group inner list-group-item-text">
                                {{ x.p_desc }}</p>
                            <div class="row">
                                <div class="col-xs-12 col-md-6">
                                    <p class="lead">
                                        ${{ x.price }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <h2>History</h2>
        <ul class="nav nav-tabs">
            <li class="active"><a data-toggle="tab" href="#Ordered">Order History</a></li>
            <li><a data-toggle="tab" href="#Sold">Sold Items</a></li>
            <li><a data-toggle="tab" href="#Bids">Bids</a></li>
        </ul>
        <div class="tab-content">
            <div id="Ordered" class="tab-pane fade in active">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Product Name</th>
                            <th>Product Quantity</th>
                            <th>Total Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="x in orders">
                            <td>{{ x.p_id.p_name }}</td>
                            <td>{{ x.quantity }}</td>
                            <td>{{ x.amount }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div id="Sold" class="tab-pane fade">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Sold Quantity</th>
                        <th>Buyer</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr ng-repeat="x in solds">
                        <td>{{ x.p_id.p_name }}</td>
                        <td>{{ x.quantity }}</td>
                        <td>{{ x.u_id.fn}} {{ x.u_id.ln}}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div id="Bids" class="tab-pane fade">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Bidding Amount</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr ng-repeat="x in bids">
                        <td>{{ x.p_id.p_name }}</td>
                        <td>{{ x.amount }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



<div class="container">
    <div class="page-header">
        <h2>Searched</h2>
    </div>
    <div id="products" class="row list-group">

        <div class="item  col-xs-4 col-lg-4" ng-repeat="x in searchs">
            <div class="thumbnail">
                <img class="group list-group-image" src="https://onepagelove.com/wp-content/uploads/2014/12/ph-400x211.jpg" alt="" />
                <div class="caption">
                    <a href="/product/{{x.p_id}}">
                        <h4 class="group inner list-group-item-heading">
                            {{ x.p_name }}</h4>
                    </a>
                    <p class="group inner list-group-item-text">
                        For {{ x.ausel }}</p>
                    <div class="row">
                        <div class="col-xs-12 col-md-6">
                            <p class="lead">
                                ${{ x.price }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="javascripts/profile.js" type="text/javascript"></script>
</body>
<script>
    $(document).ready(function() {
        $('#list').click(function(event){event.preventDefault();$('#products .item').addClass('list-group-item');});
        $('#grid').click(function(event){event.preventDefault();$('#products .item').removeClass('list-group-item');$('#products .item').addClass('grid-group-item');});
    });
</script>
</html>
